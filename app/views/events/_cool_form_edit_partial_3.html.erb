<% content_for :full_page do %>


<%= render 'shared/flashes' %>

<div class="form-create">
<div class="form-signup">

  <div class="row">
    <div class="col-xs-12">
        <div class="close-form">
            <%= link_to event_path do %>
            <i class="fa fa-times" aria-hidden="true"></i>
            <% end %>
        </div>


      </div>

<!--       <div class="row"> -->
        <div class="sign-up-content">
        <div class="col-xs-12">
        <div class="sign-for-free">
          <h3>Edit your event</h3>

        </div>
        </div>
        <div class="col-xs-12">
        <div class="row">


          <div class="fill-form">

<div class=" col-xs-12">
<div class="row">
<div class="numbers-form">
<%= link_to "1", cool_form_edit_path(@event.id, 1), class: "numberCircle-others col-xs-4" %>
<%= link_to "2", cool_form_edit_path(@event.id, 2), class: "numberCircle-others col-xs-4" %>
<div class="numberCircle col-xs-4">3</div>
</div>
</div>




<div class="simple-form-for">
    <%= simple_form_for(@event, url: cool_form_edit_path(@event.id, 4), method: :get) do |f| %>
      <%= f.error_notification %>
      <% event = @event %>
            <div class="form-inputs">
            <div class="hidden-fields">

            <div class="input-group login-form">

            <%= f.input :name, placeholder: "Event Name",:label => false, input_html: { value: params[:name] || event.name,   class: 'form-control btn-lg btn-login' } %>
            </div>
            <div class="input-group login-form">
        <%= f.input :organization, placeholder: "My organization", :label => false, input_html: { value: params[:organization] || event.organization, class: 'form-control btn-lg btn-login' }  %>
        </div>
        <div style="display: none;">
        <div class="row">
            <div class="col-xs-6">
            <div class="input-group login-form">
            <%= f.date_field :start_day, :label => false, value: @event.start_time.strftime('%Y-%m-%d'), as: :hidden,  class: 'form-control btn-lg btn-login blue-time'  %>
           </div>
            </div>
            <div class="col-xs-6">
            <div class="input-group login-form">
             <%= f.time_field :start_day, :label => false, value: @event.start_time.strftime('%Y-%m-%d'), class: 'form-control btn-lg btn-login'  %>
        <%#= f.time_field :start_time, input_html: { value: params[:start_time] || event.start_time}  %>
            </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
            <div class="input-group login-form">
            <%= f.date_field :start_day, :label => false, value: @event.start_time.strftime('%Y-%m-%d'), class: 'form-control btn-lg btn-login'  %>
            </div>
            </div>
            <div class="col-xs-6">
            <div class="input-group login-form">
            <%= f.time_field :end_time, :label => false, value: @event.end_time.strftime('%H:%M'), class: 'form-control btn-lg btn-login'  %>
            </div>
            </div>
        </div>
        </div>

        <div class="input-group login-form">
        <%= f.input :address, placeholder: "Street, City, ZIP", :label => false, input_html: { value: @address || params[:address] || event.address, class: 'form-control btn-lg btn-login' }  %>
        </div>

        <div class="input-group login-form">

        <%= f.input :description, :label => false, placeholder: "What kind of help do you need?", input_html: { value: params[:description] || event.description, class: 'form-control btn-lg btn-login'  } %>
        </div>
        <div class="input-group login-form">

        <%= f.input :capacity, placeholder: "People required", :label => false, input_html: { value: params[:capacity] || event.capacity}  %>
        </div>
        </div>




<div class="login-form">
          <span class="input-group-addon btn-add-event-categories" id="basic-addon1">
            <i class="fa fa-filter" aria-hidden="true"></i> Categories
          </span>
          <div class="categories">
    <!--       <%= f.input :tags, :label => false, checked: (params[:event][:tags] if params[:event]), include_blank: false, as: :check_boxes, collection: Event::TAGS, class: 'check_boxes_submit', input_html: { value: params[:tags] || event.tags } %>
 -->
            <div class="form-group check_boxes required event_tags">
              <input type="hidden" name="event[tags][]" value="">
              <div class="row">
                <% Event::TAGS.each_with_index do |tag, i| %>
                  <div class="col-xs-5 col-xs-offset-1">
                    <span class="checkbox">
                      <label for="<%= "event_tags_#{tag.parameterize}" %>">
                        <input value="<%= tag %>" class="check_boxes required" type="checkbox" name="event[tags][]" id="<%= "event_tags_#{tag.parameterize}" %>">
                        <%= tag %>
                      </label>
                    </span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>





        <div class="input-group login-form image-field">

        <%= f.input :photos, as: :attachinary, :label => false, class: 'form-control-file text-success font-weight-bold', input_html: { value: params[:photos] || event.photos }  %>
        </div>

        <div class="input-group login-form">

        <%= f.input :source_event_id, as: :hidden, :label => false, input_html: { value: params[:source_event_id], class: 'form-control btn-lg btn-login'  }  %>

      </div>



      <div class="form-actions">
        <%= f.button :submit, value: "Edit mission", data: {disable_with: "Loading..."}, class: "form-control btn-lg btn-next-step" %>
      </div>
    <% end %>

  </div>

      </div>
        </div>
        </div>
    <!--   </div> -->

            </div>

        </div>
      </div>

</div>

</div>
</div>

<% end %>





